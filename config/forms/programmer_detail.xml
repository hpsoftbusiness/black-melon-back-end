<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>programmers_details</key>

    <properties>
        <property name="name" type="text_line" mandatory="true">
            <meta>
                <title>sulu_admin.name</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
        </property>

        <property name="surname" type="text_line" mandatory="true">
            <meta>
                <title>sulu_admin.surname</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
        </property>

        <property name="birth_date" type="datetime">
            <meta>
                <title>app.birth_date</title>
            </meta>
        </property>

        <property name="height" type="number">
            <meta>
                <title>app.height</title>
            </meta>
        </property>

        <property name="link_to_github" type="text_line" colspan="12">
            <meta>
                <title>app.link_to_github</title>
            </meta>
        </property>
    </properties>
</form>
